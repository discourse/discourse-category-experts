<DModalBody>
  <TapTileGrid @activeTile={{duration}} as |grid|>
    {{#each groupOptions as |group|}}
      <TapTile
        @tileId={{group.id}}
        @activeTile={{grid.activeTile}}
        @onChange={{action "setGroupId"}}
      >
        {{group.name}}
      </TapTile>
    {{/each}}
  </TapTileGrid>
</DModalBody>